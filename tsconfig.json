{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react",
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["powerapps-component-framework", "xrm", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true
  }
}
